            <Button fx:id="btnEspecial" mnemonicParsing="false" onAction="#handleEspecial" prefHeight="40.0" prefWidth="180.0" text="Especial (30 Dano)" />

        </HBox>
    </VBox>

     <ImageView fx:id="player2Img" fitHeight="330.0" fitWidth="825.0" layoutX="945.0" layoutY="324.0" pickOnBounds="true" preserveRatio="true" />

     <ImageView fx:id="player1Img" fitHeight="331.0" fitWidth="773.0" layoutX="147.0" layoutY="323.0" pickOnBounds="true" preserveRatio="true" />
