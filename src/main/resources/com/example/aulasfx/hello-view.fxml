     <Label layoutX="284.0" layoutY="14.0" text="PLAYER 1" textFill="#0000ff">
         <font>
             <Font name="System Bold" size="20.0" />
         </font>
     </Label>
     <ProgressBar fx:id="player1HealthBar" layoutX="165.0" layoutY="45.0" prefWidth="300.0" progress="1.0" />
     <Label layoutX="1470.0" layoutY="25.0" text="CPU" textFill="#ff0000">
         <font>
             <Font name="System Bold" size="20.0" />
         </font>
     </Label>
     <ProgressBar fx:id="player2HealthBar" layoutX="1336.0" layoutY="53.0" prefWidth="300.0" progress="1.0" />

    <VBox alignment="TOP_CENTER" layoutX="150.0" layoutY="218.0" spacing="10.0" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="218.0" />

